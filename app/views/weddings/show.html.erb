<% provide(:title, "Your Dashboard") %>
<div class="row">
	<div class="span12">
		<h3>Your Dashboard</h3>
	</div>
</div>


<h1><%= @weddings.date %></h1>

<div id="wedding">
  <%= form_for @weddings.events.build do |f| %>
    <%= f.hidden_field :wedding_id %>
    <%= f.text_field :date %>
    <%= f.submit %>
  <% end %>

  <h2>Incomplete Events</h2>
  <div class="events" id="incomplete_events">
    <%= render @weddings.incomplete_events %>
  </div>

  <h2>Complete Events</h2>
  <div class="events" id="complete_events">
    <%= render @weddings.complete_events %>
  </div>

  <p><%= link_to "Back to Weddings", weddings_path %></p>
</div>
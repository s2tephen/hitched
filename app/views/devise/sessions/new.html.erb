<div class="row">
	<div class="span4 offset4">
		<h2>Login</h2>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
<%= f.input :email, :autofocus => true, placeholder: 'Email' ,label: false, :required => true, :input_html => { :class => "span4" }%>
		<%= f.input :password, :required => true, placeholder: 'Password' ,label: false, :input_html => { :class => "span4" }%>
  <%= f.input_field :remember_me,label: false, inline_label: 'Remember me' ,:input_html => { :class => "span4" }, :as => :boolean if devise_mapping.rememberable? %>
		<%= f.button :submit, 'Login', :class => 'btn-info span4 btn-block' %>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>